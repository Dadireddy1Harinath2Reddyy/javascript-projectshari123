JAVASCRIPT 


let spanid = document.getElementById('counterValue');
let btton = document.getElementById('incrementBtn');
btton.onclick = function() {
    let value = parseInt(spanid.textContent) + 1;
    localStorage.setItem("clickCount", value);
    spanid.textContent = value;
}
